generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  EMPLOYEE
  CLIENT
}

enum ProjectStatus {
  ACTIVE
  ON_HOLD
  COMPLETED
}

enum TaskStatus {
  PENDING
  IN_PROGRESS
  SUBMITTED
  APPROVED
  REJECTED
}

enum Priority {
  LOW
  MEDIUM
  HIGH
}

enum IssueStatus {
  OPEN
  IN_PROGRESS
  RESOLVED
  CONVERTED_TO_TASK
}

enum MediaType {
  IMAGE
  VIDEO
}

enum EntityType {
  PROJECT
  TASK
  ISSUE
  COMMENT
}

model User {
  id           String   @id @default(uuid())
  name         String
  email        String   @unique
  passwordHash String
  role         Role
  avatarUrl    String?
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())

  createdProjects Project[] @relation("CreatedProjects")
  clientProjects  Project[] @relation("ClientProjects")

  tasksCreated Task[]

  projectMembers  ProjectMember[]
  taskAssignments TaskAssignment[]
  submissions     WorkSubmission[]
  comments        Comment[]
  issues          Issue[]
  notifications   Notification[]
}

model Project {
  id              String        @id @default(uuid())
  title           String
  description     String
  status          ProjectStatus @default(ACTIVE)
  percentCompleted Int          @default(0)

  clientId  String
  client    User    @relation("ClientProjects", fields: [clientId], references: [id])

  createdById String
  createdBy   User   @relation("CreatedProjects", fields: [createdById], references: [id])

  startDate DateTime?
  endDate   DateTime?
  createdAt DateTime @default(now())

  members     ProjectMember[]
  tasks       Task[]
  issues      Issue[]
  milestones  Milestone[]
  comments    Comment[]
}

model ProjectMember {
  id        String @id @default(uuid())
  projectId String
  userId    String

  project Project @relation(fields: [projectId], references: [id])
  user    User    @relation(fields: [userId], references: [id])

  @@unique([projectId, userId])
}

model Task {
  id              String     @id @default(uuid())
  title           String
  description     String
  priority        Priority
  status          TaskStatus @default(PENDING)
  percentCompleted Int       @default(0)
  deadline        DateTime?

  projectId String
  project   Project @relation(fields: [projectId], references: [id])

  createdById String
  createdBy   User @relation(fields: [createdById], references: [id])

  createdAt DateTime @default(now())

  assignments  TaskAssignment[]
  submissions  WorkSubmission[]
  comments     Comment[]

  convertedFromIssues Issue[]
}

model TaskAssignment {
  id     String @id @default(uuid())
  taskId String
  userId String

  task Task @relation(fields: [taskId], references: [id])
  user User @relation(fields: [userId], references: [id])

  @@unique([taskId, userId])
}

model WorkSubmission {
  id            String     @id @default(uuid())
  description   String
  percentReported Int
  versionNumber Int        @default(1)
  status        TaskStatus @default(SUBMITTED)

  taskId String
  task   Task @relation(fields: [taskId], references: [id])

  submittedById String
  submittedBy   User @relation(fields: [submittedById], references: [id])

  createdAt DateTime @default(now())

  media SubmissionMedia[]
}

model SubmissionMedia {
  id           String    @id @default(uuid())
  mediaUrl     String
  mediaType    MediaType

  submissionId String
  submission   WorkSubmission @relation(fields: [submissionId], references: [id])
}

model Comment {
  id        String   @id @default(uuid())
  text      String
  createdAt DateTime @default(now())

  authorId String
  author   User @relation(fields: [authorId], references: [id])

  taskId    String?
  task      Task?    @relation(fields: [taskId], references: [id])

  projectId String?
  project   Project? @relation(fields: [projectId], references: [id])

  parentCommentId String?
  parent           Comment? @relation("CommentThread", fields: [parentCommentId], references: [id])
  replies          Comment[] @relation("CommentThread")
}

model Issue {
  id          String      @id @default(uuid())
  title       String
  description String
  status      IssueStatus @default(OPEN)
  createdAt   DateTime    @default(now())

  projectId String
  project   Project @relation(fields: [projectId], references: [id])

  createdById String
  createdBy   User @relation(fields: [createdById], references: [id])

  convertedTaskId String?
  convertedTask   Task? @relation(fields: [convertedTaskId], references: [id])
}

model Milestone {
  id          String @id @default(uuid())
  title       String
  description String?
  dueDate     DateTime?
  status      String @default("PENDING")

  projectId String
  project   Project @relation(fields: [projectId], references: [id])
}

model Notification {
  id        String     @id @default(uuid())
  title     String
  message   String
  isRead    Boolean    @default(false)
  entityType EntityType
  entityId  String
  createdAt DateTime @default(now())

  userId String
  user   User @relation(fields: [userId], references: [id])
}